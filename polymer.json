{
  "entrypoint": "index.html",
  "shell": "src/main-app.html",
  "fragments": [
    "src/pages/home-page.html",
    "src/pages/teaching-page.html",
    "src/pages/research-page.html",
    "src/pages/publications-page.html",
    "src/pages/contact-page.html",
    "src/pages/error-page.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "robots.txt",
    "bower_components/webcomponentsjs/*",
    "!bower_components/webcomponentsjs/gulpfile.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    }
  ]
}
